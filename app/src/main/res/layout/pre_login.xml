<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.multimedia.aes.gestnet_ssl.nucleo.PreLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_weight="0"
                android:background="@drawable/logo_nav"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

        </LinearLayout>

        <EditText
            android:id="@+id/etCodCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/edit_texts_naranja"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/cod_cliente"
            android:inputType="textVisiblePassword"
            android:padding="10dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnEnviarCodCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botones"
            android:contextClickable="false"
            android:elevation="0dp"
            android:text="@string/enviar"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
