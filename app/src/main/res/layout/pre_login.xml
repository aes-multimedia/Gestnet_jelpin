<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.multimedia.aes.gestnet_nucleo.nucleo.PreLogin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/logo"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fondo_naranja"
        android:orientation="horizontal"></LinearLayout>

    <EditText
        android:id="@+id/etCodCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_texts_naranja"
        android:ems="10"
        android:gravity="center"
        android:inputType="text|number"
        android:padding="10dp"
        android:text="@string/cod_cliente"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnEnviarCodCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botones"
        android:elevation="0dp"
        android:text="@string/enviar"
        android:visibility="visible" />

</LinearLayout>
