<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.multimedia.aes.gestnet_sgsv2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/circle"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar.FullScreen">
        <activity
            android:name=".nucleo.Login"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".nucleo.Index"
            android:label="@string/title_activity_index"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name=".nucleo.PreLogin"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".nucleo.Incidencias"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".fragment.FragmentBluetooth"></activity>
        <activity
            android:name=".nucleo.Firmar"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>
    </application>

</manifest>